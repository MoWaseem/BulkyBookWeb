@model Category

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row" pb-2>
            <h2 class="text-primary">Delete</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Title">Name</label>
            <input asp-for="Title" disabled class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-asp-controller="Category" asp-action="index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}